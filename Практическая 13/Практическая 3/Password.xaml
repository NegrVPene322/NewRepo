<Window x:Class="Практическая_3.Password"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Практическая_3"
        mc:Ignorable="d"
        Title="Авторизация" Height="150" Width="250"  Closing="PasswordWindow_Closing"   WindowStartupLocation="CenterOwner">
    <Grid>
        <TextBlock Text="Введите пароль:" Margin="10" VerticalAlignment="Top"/>
        <PasswordBox x:Name="passwordBox" Margin="10,30,10,0" VerticalAlignment="Top" />
        <Button Content="Войти" Margin="10,80,10,10" VerticalAlignment="Top" Click="btnEnter_Click"/>
    </Grid>
</Window>
