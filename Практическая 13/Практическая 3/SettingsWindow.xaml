<Window x:Class="Практическая_3.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Практическая_3"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="200" Width="300">
    <Grid>
        <TextBlock Text="Количество строк:" Margin="10" VerticalAlignment="Top"/>
        <TextBox x:Name="tbRows" Margin="10,30,10,0" VerticalAlignment="Top"/>

        <TextBlock Text="Количество столбцов:" Margin="10,70,10,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbCols" Margin="10,100,10,0" VerticalAlignment="Top"/>

        <Button Content="Сохранить" Margin="10,130,10,10" VerticalAlignment="Top" Click="btnSave_Click"/>
    </Grid>

    
</Window>
