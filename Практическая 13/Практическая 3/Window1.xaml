<Window x:Class="Практическая_3.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Практическая_3"
        mc:Ignorable="d"
        Title="Авторизация" Height="200" Width="300">
    <Grid>
        <Grid>
            <Label Content="Введите пароль:" VerticalAlignment="Center" HorizontalAlignment="Center" />
            <PasswordBox x:Name="passwordBox" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,30,0,0" Width="200"/>
            <Button Content="Войти" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,70,0,0" Click="OnLoginButtonClick"/>
        </Grid>
    </Grid>
</Window>
